{
  "description": "Provides an element-level annotation tool for machine learning datasets",
  "manifest_version": 2,
  "name": "HTML Element Annotator",
  "version": "1.0",
  "homepage_url": "https://github.com/arpieb/html-element-annotator",
  "icons": {
    "48": "icon.svg"
  },

  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>" 
  ],

  "content_scripts": [
      {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content-script.js"]
    }
  ],

  "sidebar_action": {
    "default_title": "HEA Tagger",
    "default_icon": "icon.svg",
    "default_panel": "sidebar/sidebar.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "web_accessible_resources": [
  ]
}

